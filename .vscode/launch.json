{
    // IntelliSense sucks. Use some creativity.
    "version": "0.3.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (simplest configuration)",
            "program": "${file}"
        },
        {
            "name": "Run DXSBash TUI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tui/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/tui/venv/bin/python"
        },
        {
            "name": "Debug DXSBash TUI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tui/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/tui/venv/bin/python",
            "justMyCode": false,
            "args": ["--debug"]
	}
    ]
}
